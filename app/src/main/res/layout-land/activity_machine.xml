        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/machineOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/machine1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ww_machine_empty"
                android:layout_centerHorizontal="true"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/machine1full"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ww_machine_full"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:paddingTop="16dp"
                android:text="1"
                android:textColor="@color/machineNumber"
                android:textSize="@dimen/machine_text_size"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/selectMachOne"
                android:layout_width="160dp"
                android:layout_height="@dimen/select_btn_height"
                android:layout_below="@id/machine1"
                android:backgroundTint="@color/selectButtonBlue"
                android:text="@string/select_machine_btn"
                android:textSize="24dp"/>

            <Button
                android:id="@+id/machineOneClock"
                android:layout_width="160dp"
                android:layout_height="@dimen/select_btn_height"
                android:layout_below="@id/selectMachOne"
                android:text="00:00"
                android:textSize="24dp"/>

            <TextView
                style="?android:listSeparatorTextViewStyle"
                android:id="@+id/machOneNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tenant_notified"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:textColor="@color/red"
                android:layout_below="@id/machineOneClock"
                />

        </RelativeLayout>

